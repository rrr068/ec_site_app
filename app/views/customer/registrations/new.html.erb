<div class="container text-center">
    <h2 class="pb-5 pt-2">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-11/12 md:w-10/12 xl:w-8/12" }, data: { turbo: false } )  do |f| %>
      <% render "customer/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :名前 %><br />
        <%= f.text_field :name, class: 'form-contro-sm' %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス, class: "mb-2 block text-sm text-gray-600" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control-sm' %>
      </div>

      <div class="field pb-2 g-col-6">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control-sm' %>
      </div>

      <div class="field pb-2 g-col-6">
        <%= f.label :パスワード再確認 %><br />
        <%= f.password_field :password_confirmation, class: 'form-control-sm' %>
      </div>
      
      <div class="actions">
        <%= f.submit 'Sign Up', class: 'btn btn-success mt-2' %>
      </div>

      <div class="actions">
        <div class=" btn mt-2">
          <%= render "customer/shared/links" %>
        </div>
      </div>
  
    <% end %>
    
    
</div>
